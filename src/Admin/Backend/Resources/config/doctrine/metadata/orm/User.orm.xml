<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="User" table="user">
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
      <unique-constraint name="school_id_UNIQUE" columns="code"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="45" nullable="false"/>
    <field name="birthdate" type="date" column="birthdate" nullable="true"/>
    <field name="phone" type="integer" column="phone" nullable="true"/>
    <field name="address" type="string" column="address" length="45" nullable="true"/>
    <field name="photoDir" type="string" column="photo_dir" length="100" nullable="true"/>
    <field name="code" type="string" column="code" length="10" nullable="true"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="email" type="string" column="email" length="35" nullable="true"/>
    <field name="createdBy" type="integer" column="created_by" nullable="false"/>
    <field name="password" type="string" column="password" length="128" nullable="false"/>
    <many-to-many field="fkUserType" target-entity="Role" inversed-by="fkUsers">
      <join-table name="users_has_user_type">
        <join-columns>
          <join-column name="fk_users" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="fk_user_type" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
