<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Course" table="course">
    <indexes>
      <index name="fk_courses_category1_idx" columns="category_id"/>
      <index name="fk_courses_users1_idx" columns="coordenator_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
      <unique-constraint name="name_UNIQUE" columns="name"/>
      <unique-constraint name="school_id_UNIQUE" columns="code"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="45" nullable="false"/>
    <field name="monthDuration" type="integer" column="month_duration" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="code" type="string" column="code" length="10" nullable="true"/>
    <field name="level" type="integer" column="level" nullable="false"/>
    <field name="createdBy" type="integer" column="created_by" nullable="false"/>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
    <many-to-one field="category" target-entity="Category">
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="coordenator" target-entity="User">
      <join-columns>
        <join-column name="coordenator_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
