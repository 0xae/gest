{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Course</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_course_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Course
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th><th>Monthduration</th><th>Createdat</th><th>Code</th><th>Level</th><th>Createdby</th><th>Isactive</th>                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr><td><a href="{{ path('administration_course_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td><td>{{ entity.monthDuration }}</td><td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{{ entity.code }}</td>                                                                                    <td>{{ entity.level }}</td>                                                                                    <td>{{ entity.createdBy }}</td>                                                                                    <td>{{ entity.isActive }}</td>                                            <td><a href="{{ path('administration_course_edit', { 'id': entity.id }) }}">
<span class="badge badge-primary">
        EDITAR
</span>
</a>
                                            </td>                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
