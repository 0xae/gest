{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Curso: {{ entity.name }}</h3>
                    <p>
                        <a href="{{ path('administration_course') }}">
                            <span class="glyphicon glyphicon-back"></span> Voltar
                        </a>
                    </p>
                </div>
                <!-- /.box-header -->

                <div class="box-body no-padding">
                    <table class="table table-hover table-striped">
                        <tbody>
                            <tr>
                                <th>Code</th>
                                <td>{{ entity.code }}</td>
                            </tr>
                            <tr>
                                <th>Monthduration</th>
                                <td>{{ entity.monthDuration }}</td>
                            </tr>
                            <tr>
                                <th>Createdat</th>
                                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            <tr>
                                <th>Level</th>
                                <td>{{ entity.level }}</td>
                            </tr>
                            <tr>
                                <th>Createdby</th>
                                <td>{{ entity.createdBy }}</td>
                            </tr>
                            <tr>
                                <th>Isactive</th>
                                <td>{{ entity.isActive }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->


            <div>
                <div role="tabpanel">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#klass" aria-controls="home" role="tab" data-toggle="tab">Turmas</a>
                        </li>
                        <li role="presentation">
                            <a href="#discipline" aria-controls="profile" role="tab" data-toggle="tab">Disciplinas</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content box">
                        <div role="tabpanel" class="tab-pane active" id="klass">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Ano Lectivo</th>
                                    </tr>
                                    <tr>
                                        {% for class in classes %}
                                            <td>{{class.name}}</td>
                                            <td>{{class.schoolYear|date('Y')}}</td>
                                        {% endfor %}
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                        <div role="tabpanel" class="tab-pane" id="discipline">
                            <div class="box-tools">
                                <a class="btn btn-primary" data-toggle="modal" data-target="#chooseDisciplineModal" 
                                   href="">
                                    <span class="glyphicon glyphicon-plus"></span>
                                    Adicionar disciplina
                                </a>
                            </div>
                            <table class="table table-hover table-striped">
                                <tbody>
                                    <tr>
                                        <th>Nome</th>
                                    </tr>
                                    <tr>
{#                                        {{dump(disciplines)}}#}
                                        {% for discipline in disciplines %}
                                            <td>{{discipline.name}}</td>
                                        {% endfor %}
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="modal" id="chooseDisciplineModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Default Modal</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body…</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

{% endblock %}

