{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content %}
<div ng-controller="DashboardController">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h3>Reclamações Externas</h3>
            </center>
        </div>

        <div class="col-md-3">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>
                        {{total[0]['count']}}
                    </h3>
                    <p>{{month}}</p>
                </div>
                <div class="icon">
                    <i class="fa fa-check"></i>
                </div>
                <a href="#" class="small-box-footer">
                    Registadas
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>
                        {{counters['respondido'][0]['count']}}
                    </h3>
                    <p>{{month}}</p>
                </div>
                <div class="icon">
                    <i class="fa fa-thumbs-up"></i>
                </div>
                <a href="#" class="small-box-footer">
                    Respondidas
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>
                        {{counters['sem_resposta'][0]['count']}}
                    </h3>
                    <p>{{month}}</p>
                </div>
                <div class="icon">
                    <i class="fa fa-thumbs-down"></i>
                </div>
                <a href="#" class="small-box-footer">
                    Sem resposta
                </a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>
                        {{counters['acompanhamento'][0]['count']}}
                    </h3>
                    <p>{{month}}</p>
                </div>
                <div class="icon">
                    <i class="fa fa-clock-o"></i>
                </div>
                <a href="#" class="small-box-footer">
                    No Acompanhamento
                </a>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                </div>
                <div class="box-body no-padding">
                    <div id="by_month"></div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="box">
                <div class="">
                </div>
                <div class="box-body no-padding">
                    <div id="by_department"></div>
                </div>
            </div>
        </div>

    </div>
</div>

{% endblock %}

