{{ form_start(form) }}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    {# Identificação do utente #}
    <div class="row">
        {# <div class="hidden">
            {{ form_widget(form.stage) }}
        </div> #}
        {# <div class="col-md-12">
            {% for message in app.session.flashBag.get('complaint') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        </div> #}

        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Identificação do utente
            </div>

            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
                <label>Morada</label>
                {{ form_widget(form.address) }}
            </div>

            <div class="form-group">
                <label>Localidade</label>
                {{ form_widget(form.locality) }}
            </div>

            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.phone) }}
            </div>

            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.email) }}
            </div>
        </div>

        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Queixa/Denuncia
            </div>

            <div class="form-group">
                <label>Tipo</label>
                {{ form_widget(form.type) }}
            </div>

            <div class="form-group">
                <label>Data de criação</label>
                {{ form_widget(form.createdAt, {
                    'read_only' : true
                }) }}
            </div>

            <div class="form-group" ng-init="setCategory('{{entity.complaintCategory}}')">
                <input type="checkbox" ng-model="categoryConf.cat_sf.active" />
                <label>Setor Farmacêutico</label>
                <div>
                    <ul class="unstyled">
                        <li><input type="checkbox" ng-model="categoryConf.cat_sf.op1" /> Biocidas</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sf.op2" /> Medicamentos de Uso Humano</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sf.op3" /> Produtos Cosméticos</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sf.op4" /> Produtos Químico-farmacêuticos</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sf.op5" /> Outros</li>
                    </ul>
                </div>
                {{ form_widget(form.complaintCategory, {'attr': {
                    'style' : 'display: none'
                }}) }}
            </div>

            <div class="form-group">
                <input type="checkbox" ng-model="categoryConf.cat_sa.active" />
                <label>Setor Alimentar</label>
                <div>
                    <ul class="unstyled">
                        <li><input type="checkbox" ng-model="categoryConf.cat_sa.op1" /> Alimentos destinados ao Consumo Humano</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sa.op2" /> Suplementos e Aditivos Alimentares</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sa.op3" /> Alimentos com propriedades Funcionais</li>
                        <li><input type="checkbox" ng-model="categoryConf.cat_sa.op4" /> Outros</li>
                    </ul>
                </div>
            </div>
        </div>

        {# <div class="col-md-12">
            {% if entity.id %}
                <div class="form-group">
                    <label>Enviar para</label>
                    {{ form_widget(form.stage) }}
                </div>
            {% else %}
                <div class="form-group" style="display:none">
                    {{ form_widget(form.stage) }}
                </div>
            {% endif %}
        </div> #}
    </div>

    {# Identificação do Operador Económico #}
    <div class="row" style="margin-top:25px;">
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Identificação do Operador Económico
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.opName) }}
            </div>
            <div class="form-group">
                <label>Morada</label>
                {{ form_widget(form.opAddress) }}
            </div>
            <div class="form-group">
                <label>Localidade</label>
                {{ form_widget(form.opLocality) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.opPhone) }}
            </div>
            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.opEmail) }}
            </div>
        </div>
    </div>

    {# Descrição dos Fatos #}
    <div class="row" style="margin-top:25px;">
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Descrição sum&aacute;ria dos fatos
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Data</label>
                {{ form_widget(form.factDate) }}
            </div>

            <div class="form-group">
                <label>Local</label>
                {{ form_widget(form.factLocality) }}
            </div>

            <div class="form-group">
                <label>Descri&ccedil;&atilde;o</label>
                {{ form_widget(form.factDetail) }}
            </div>

            <div class="form-group">
                <label>Entrega do produto a ARFA ?</label>
                {{ form_widget(form.hasProduct) }}
            </div>

            <div class="form-group">
                {{ form_widget(form.submit) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                {# {{ form_widget(form.hasAnnex) }} #}
            </div>

            <div class="form-group">
                <label>Tipo do anexo</label>
                {{ form_widget(form.annexType) }}
            </div>
        </div>

        {{ form(form) }}
    </div>
{{ form_end(form) }}
