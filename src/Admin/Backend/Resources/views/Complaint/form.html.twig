{{ form_start(form) }}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    {# Identificação do utente #}
    <div class="row">
        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Identificação do utente
            </div>

            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.name) }}
            </div>

            <div class="form-group">
                <label>Morada</label>
                {{ form_widget(form.address) }}
            </div>

            <div class="form-group">
                <label>Localidade</label>
                {{ form_widget(form.locality) }}
            </div>

            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.phone) }}
            </div>

            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.email) }}
            </div>
        </div>

        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Queixa/Denuncia
            </div>

            <div class="form-group">
                <label>Tipo</label>
                {{ form_widget(form.type) }}
            </div>

            <div class="form-group">
                <label>Data</label>
                {{ form_widget(form.createdAt) }}
            </div>
        </div>
    </div>

    {# Identificação do Operador Económico #}
    <div class="row" style="margin-top:25px;">
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Identificação do Operador Económico
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.opName) }}
            </div>
            <div class="form-group">
                <label>Morada</label>
                {{ form_widget(form.opAddress) }}
            </div>
            <div class="form-group">
                <label>Localidade</label>
                {{ form_widget(form.opLocality) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.opPhone) }}
            </div>
            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.opEmail) }}
            </div>
        </div>
    </div>

    {# Descrição dos Fatos #}
    <div class="row" style="margin-top:25px;">
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-archive"></span>
                Descrição dos Fatos
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Data</label>
                {{ form_widget(form.factDate) }}
            </div>

            <div class="form-group">
                <label>Local</label>
                {{ form_widget(form.factLocality) }}
            </div>

            <div class="form-group">
                <label>Descri&ccedil;&atilde;o</label>
                {{ form_widget(form.factDetail) }}
            </div>

            <div class="form-group">
                <label>Entrega do produto a ARFA</label>
                {{ form_widget(form.hasProduct) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Incluir anexo</label>
                {{ form_widget(form.hasAnnex) }}
            </div>

            <div class="form-group">
                <label>Anexo</label>
                {{ form_widget(form.factAnnex) }}
            </div>

            <div class="form-group">
                <label>Tipo do anexo</label>
                {{ form_widget(form.annexType) }}
            </div>

            {{ form(form) }}
        </div>
    </div>
{{ form_end(form) }}
