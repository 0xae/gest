{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

<style>
ul.pagination {
    margin-top:0px;
}
</style>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Listagem de Queixas e Den&uacute;ncias</h3>

                <div class="box-tools">
                    <a class="btn btn-primary" 
                    href="{{ path('administration_Complaint_new') }}">
                        <span class="glyphicon glyphicon-plus"></span>
                        Criar Queixa/Den&uacute;ncia
                    </a>
                </div>
            </div>
            <!-- /.box-header -->

            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>C&oacute;digo#</th>
                            {# <th>Tipo</th> #}
                            <th>Data</th>
                            <th>Data prevista de resposta</th>
                            <th>Nome do utente</th>
                            <th>Telefone/email</th>
                            <th>Operador Econ√≥mico</th>
                            <th>Criado por</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    <a href="{{ path('administration_Complaint_edit', {'id': entity.id}) }}">
                                        {{ entity.objCode }}
                                    </a>                                   
                                    {# <a href="#" class="label label-default">
                                            {{ entity.state }}
                                    </a> #}
                                </td>
                                {# <td>
                                    {% if entity.type == 'queixa' %}
                                        Queixa
                                    {% elseif entity.type == 'denuncia'  %}
                                        Denuncia
                                    {% else %}
                                        {{entity.type}}
                                    {% endif %}
                                </td> #}
                                <td>{{ entity.createdAt|date('Y-m-d') }}</td>
                                <td>{{ entity.respDate|date('Y-m-d') }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.phone }}</td>
                                <td>{{ entity.opName }}</td>
                                <td>{{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}</td>
                                <td>
                                     <a href="{{ path('administration_Complaint_receipt', { 'id': entity.id }) }}"
                                        title="Recibo do utente"
                                        target="_blank">
                                        <span class="label label-primary">Recibo de registro</span>
                                    </a>

                                    <a href="{{ path('administration_Complaint_edit', { 'id': entity.id }) }}">
                                        <span class="text-warning fa fa-edit"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>

        {{ include('BackendBundle:Complaint:modals/viewComplaint.html.twig') }}

        {{ pagerfanta(paginate, 'twitter_bootstrap3', {
                'next_message': 'Proximo',
                'prev_message': 'Anterior'
            }) 
        }}
        <!-- /.box -->
    </div>
</div>

{% endblock %}
