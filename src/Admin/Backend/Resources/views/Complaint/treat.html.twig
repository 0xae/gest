{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

<div class="row" ng-controller="ComplaintController">
    <div class="col-xs-12">
        {# 
            <button class="btn btn-default" type="button">Registar reclamacao externa/sugestao</button>
            <button class="btn btn-default" type="button">Registar reclamacao interna</button> 
        #}

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Tratamento de Queixas/Denuncias</h3>
            </div>
            <!-- /.box-header -->

            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>C&oacute;digo</th>
                            <th>Respons√°vel</th>
                            <th>Data</th>
                            <th>Data Prevista de resposta</th>
                            <th>Utente</th>
                            <th>Contato do utente</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in objects %}
                            <tr id="row-{{entity.id}}">
                                <td>
                                    <a href="{{ path('administration_Complaint_show', { 'id': entity.id }) }}">
                                        {{ entity.objCode }}
                                    </a>
                                </td>
                                <td>{{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}</td>
                                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.phone ~ '/' }} {{entity.email}}</td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Responder
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                            <li>
                                                <a href="#" ng-click="loadComplaint({id:{{entity.id}}, name:'{{entity.name}}', phone:'{{entity.phone}}', email:'{{entity.email}}', code:'{{ entity.objCode }}'})">
                                                    Responder
                                                </a>
                                            </li>
                                            <li >
                                                <a href="#" ng-click="rejectComplaint({{entity.id}}, $index, '{{entity.objCode}}', 'sem_resposta')">
                                                    Sem resposta
                                                </a>
                                            </li>
                                        </ul>
                                    </div>                                
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="modal fade" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header bg-green">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Responder ao utente</h4>
                        </div>

                        <div class="modal-body">
                            <h4>
                                <a href="#">{{ '{{complaint.code}}' }}</a>
                            </h4>
                            <div class="form-group">
                                <label>Nome do utente</label>
                                <input class="form-control" disabled="disabled" value="{{ '{{complaint.name}}' }}" />
                            </div>
                            <div class="form-group">
                                <label>Telefone</label>
                                <input class="form-control" disabled="disabled" value="{{ '{{complaint.phone}}' }}" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" disabled="disabled" value="{{ '{{complaint.email}}' }}" />
                            </div>
                            <textarea ng-model="response" 
                                class="form-control"
                                rows="7"
                                placeholder="Resposta para o utente"></textarea>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <button type="button" class="btn btn-success" ng-click="respondClient()">Enviar formul&aacute;rio</button>
                        </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

{% endblock %}
