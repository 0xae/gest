{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                    Queixas e Den&uacute;ncias respondidas
                    </h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>C&oacute;digo#</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th>Nome</th>
                                <th>Data</th>
                                <th>Criado por</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in objects %}
                                <tr>
                                    <td>
                                        <a href="{{ path('administration_Complaint_show', { 'id': entity.id }) }}">
                                            {{ entity.objCode }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if entity.type == 'queixa' %}
                                            Queixa
                                        {% elseif entity.type == 'denuncia'  %}
                                            Denuncia
                                        {% else %}
                                            {{entity.type}}
                                        {% endif %}
                                    </td>
                                    <td><span class="badge bg-green badge-success">Respondida</span></td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                                    <td>{{ entity.address }}</td>
                                    <td>{{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                                    </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
