{{ form_start(form) }}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
    <div class="row">
        {# Client form #}
        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Identificação do utente
            </div>        

            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.clientName) }}
            </div>
            <div class="form-group">
                <label>Endere&ccedil;o</label>
                {{ form_widget(form.clientAddress) }}
            </div>
            <div class="form-group">
                <label>Nacionalidade</label>
                {{ form_widget(form.clientNacionality) }}
            </div>
        </div>
        <div class="col-md-6">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
            </div>        

            <div class="form-group">
                <label>Telefone</label>
                {{ form_widget(form.clientPhone) }}
            </div>
            <div class="form-group">
                <label>Passaporte</label>
                {{ form_widget(form.clientPassport) }}
            </div>
            <div class="form-group">
                <label>Bilhete de identidade</label>
                {{ form_widget(form.clientBi) }}
            </div>
            <div class="form-group">
                <label>Email</label>
                {{ form_widget(form.clientEmail) }}
            </div>
        </div>

        {# Supplier form #}
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Identificação do fornecedor
            </div>
            <div class="form-group">
                <label>Nome</label>
                {{ form_widget(form.supplierName) }}
            </div>
            <div class="form-group">
                <label>Endere&ccedil;o</label>
                {{ form_widget(form.supplierAddress) }}
            </div>
        </div>

        {# Complaint form #}
        <div class="col-md-12">
            <div style="color: gray;margin-bottom: 20px;">
                <span class="fa fa-user"></span>
                Motivo da reclama&ccedil;&atilde;o
            </div>

            <div class="form-group">
                <label>Data</label>
                {{ form_widget(form.complaintDate) }}
            </div>

            <div class="form-group">
                <label>Descri&ccedil;&atilde;o da reclama&ccedil;&atilde;o</label>
                {{ form_widget(form.complaint) }}
            </div>

            <div class="hidden">
                {{ form_widget(form.createdBy) }}
                {{ form_widget(form.createdAt) }}
            </div>

            {{ form_widget(form.submit) }}
        </div>
        {{ form(form) }}
    </div>    
{{ form_end(form) }}

