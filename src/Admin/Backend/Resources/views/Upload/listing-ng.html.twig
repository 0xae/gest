<div class="" ng-controller="UploadController">
    <table class="table table-hover table-striped">
        <thead>
            <tr>                                    
                <th></th>
                <th>Anexo</th>
                <th>Adicionado por</th>
                <th>Adicionado em</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="f in files" id="upload_{{ '{{f.id}}' }}">
                <td>
                    {{ '{{ f.annexType }}' }}
                </td>
                <td>
                    <a href="{{ asset('uploads/generic/') }} {{'{{f.filename}}'}}" target="_blank">
                        {{ '{{ f.description }}' }}
                    </a>
                </td>
                <td>
                    {# {{entity.createdBy.name}}/{{entity.createdBy.entity.name}} #}
                </td>
                <td>
                    {# {{entity.createdAt|date('Y-m-d')}} #}
                </td>
                <td>
                    <a href="#" ng-click="remove(f.id)">
                        <span class="text-danger">
                            <span class="fa fa-remove"></span> Remover
                        </span>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>


</div>