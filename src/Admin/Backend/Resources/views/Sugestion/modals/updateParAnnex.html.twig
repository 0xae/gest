<div class="modal fade" id="sugestionAnnexParecerModal">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header bg-green">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Atribuir parecer com Anexo</h4>
        </div>
        <form ng-submit="updatePar()" name="responseForm">
            <div class="modal-body">
                <label>Sugestao/Reclamacao</label>
                <input class="form-control" disabled="disabled" value="{{ '{{mObject.code}}' }}" />
                <br/>

                <div class="form-group">
                    <label>Nome do utente</label>
                    <input class="form-control" disabled="disabled" value="{{ '{{mObject.name}}' }}" />
                </div>

                <label>Descri&ccedil;&atilde;o</label>
                <textarea ng-model="responseForm.description" 
                    class="form-control"
                    rows="3" placeholder="..."></textarea>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success">Enviar formul&aacute;rio</button>
            </div>
        </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
