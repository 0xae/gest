{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Sugestão/Reclamação</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Sugestion_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Sugestão/Reclamação
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                        
                                <th>ID#</th>
                                <th>Tipo</th>
                                <th>Nome</th>
                                <th>Endere&ccedil;o</th>
                                <th>Telefone</th>
                                <th>Email</th>
                                <th>Data de cria&ccedil;&atilde;o</th>
                                <th>Criado por</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>                                                                                  
                                <td>                        
                                    <a href="{{ path('administration_Sugestion_show', { 'id': entity.id }) }}">
                                    #{{ entity.id }}
                                    </a>
                                </td>                                                                                    
                                <td>{{ entity.module.name|capitalize }}</td>             
                                <td>{{ entity.name }}</td>             
                                <td>{{ entity.address }}</td>                                                
                                <td>{{ entity.phone }}</td>                                                            
                                <td>{{ entity.email }}</td>                                                             
                                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>     
                                <td>{{ entity.createdBy.name }}</td>                             
                                <td>
                                    <a href="{{ path('administration_Sugestion_edit', { 'id': entity.id }) }}">
                                        <span class="badge badge-primary">
                                            EDITAR
                                        </span>
                                    </a>
                                </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                                    </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
