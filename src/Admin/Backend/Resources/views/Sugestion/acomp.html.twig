{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            {# <button class="btn btn-default" type="button">Registar reclamacao externa/sugestao</button>
            <button class="btn btn-default" type="button">Registar reclamacao interna</button> #}

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Acompanhamento de Sugestão/Reclamação</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>C&oacute;digo</th>
                                <th>Tipo</th>
                                <th>Responsável</th>
                                <th>Data</th>
                                <th>Tem fundamento</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in objects %}
                                <tr>
                                    <td>
                                        <a href="{{ path('administration_Sugestion_show', { 'id': entity.id }) }}">
                                            {{ entity.objCode }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if entity.type == 'reclamacao' %}
                                            Reclamação
                                        {% else %}
                                            Sugestão
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}
                                    </td>
                                    <td>
                                        {{ entity.createdAt|date('Y-m-d H:i:s') }}
                                    </td>
                                    <td>
                                        Sim | Nao
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
