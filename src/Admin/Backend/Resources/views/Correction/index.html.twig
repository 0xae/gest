{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Correction</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Correction_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Correction
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                        <th>ID#</th>
                                    <th>Source</th><th>Actiondescription</th><th>Actiontype</th><th>Actiondate</th><th>Causedescription</th><th>Causedate</th><th>Impldate</th><th>Closefinished</th><th>Closedate2</th><th>Closeeficacy</th><th>Closeaction</th><th>Closeindate</th><th>Closedate</th><th>Createdat</th>                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>                                                                                    <td>
                                                <a href="{{ path('administration_Correction_show', { 'id': entity.id }) }}">
                                                #{{ entity.id }}
                                                </a>
                                            </td>                                                                                    <td>{{ entity.source }}</td>                                                                                    <td>{{ entity.actionDescription }}</td>                                                                                    <td>{{ entity.actionType }}</td>                                                                                    <td>{% if entity.actionDate %}{{ entity.actionDate|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{{ entity.causeDescription }}</td>                                                                                    <td>{% if entity.causeDate %}{{ entity.causeDate|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{% if entity.implDate %}{{ entity.implDate|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{{ entity.closeFinished }}</td>                                                                                    <td>{% if entity.closeDate2 %}{{ entity.closeDate2|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{{ entity.closeEficacy }}</td>                                                                                    <td>{{ entity.closeAction }}</td>                                                                                    <td>{% if entity.closeInDate %}{{ entity.closeInDate|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{% if entity.closeDate %}{{ entity.closeDate|date('Y-m-d H:i:s') }}{% endif %}</td>                                                                                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                                            <td><a href="{{ path('administration_Correction_edit', { 'id': entity.id }) }}">
<span class="badge badge-primary">
        EDITAR
</span>
</a>
                                            </td>                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    {% if entities %}
                        {{ pagerfanta(paginate, 'twitter_bootstrap3') }}
                    {% endif %}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
