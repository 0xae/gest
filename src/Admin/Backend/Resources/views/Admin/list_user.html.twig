    <table class="table table-hover table-striped">
        <thead>
            <tr>                                        
                <th>ID#</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Morada</th>
                <th>Criado em</th>
                <th>Criado por</th>                                
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>
                        <a href="{{ path('administration_user_show', { 'id': entity.id }) }}">
                        #{{ entity.id }}
                        </a>
                    </td>                                                                 
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.phone }}</td>
                    <td>{{ entity.address }}</td>
                    <td>
                        {% if entity.createdAt %}
                            {{ entity.createdAt|date('Y-m-d H:i:s') }}
                        {% endif %}
                    </td>
                    <td>{{ entity.createdBy }}</td>
                    <td>
                        <a href="{{ path('administration_user_edit', { 'id': entity.id }) }}">
                            <span class="badge badge-primary">EDITAR</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
</table>
