<table class="table table-hover table-striped">
    <thead>
        <tr>                                        
            <th>ID#</th>
            <th>Name</th>
            <th>Permission</th>
            <th>Createdat</th>
            <th>Createdby</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>                                                               
                <td>
                    <a href="{{ path('administration_Profile_show', { 'id': entity.id }) }}">
                    #{{ entity.id }}
                    </a>
                </td>
                <td>{{ entity.name }}</td>   
                <td>{{ entity.permission }}</td>
                <td>
                    {% if entity.createdAt %}
                        {{ entity.createdAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>{{ entity.createdBy }}</td>
                <td>
                    <a href="{{ path('administration_Profile_edit', { 'id': entity.id }) }}">
                        <span class="badge badge-primary">EDITAR</span>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
