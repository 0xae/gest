<table class="table table-hover table-striped">
    <thead>
        <tr>                                        
            <th>Nome</th>
            <th>C&oacute;digo</th>
            <th>Data de cria&ccedil;&atilde;o</th>
            <th>Descri&ccedil;&atilde;o</th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>                                                               
                <td>{{ entity.name }}</td>   
                <td>{{ entity.id }}</td>
                <td>
                    {% if entity.createdAt %}
                        {{ entity.createdAt|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>...descricao...</td>
                <td>
                    <a href="{{ path('administration_Profile_edit', { 'id': entity.id }) }}">
                        <span class="badge badge-primary">EDITAR</span>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
