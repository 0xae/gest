<!-- Logo -->
<a href="#" class="logo" style="background-color: #fff;">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-lg">
        {% image '@BackendBundle/Resources/public/img/arfa.jpg' %}
            <img src="{{ asset_url }}" class="user-image" width="100" alt="User Image!" />
