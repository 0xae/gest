{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Product</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Product_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Product
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                        <th>ID#</th>
                                    <th>Name</th><th>Description</th><th>Picture</th><th>Price</th><th>Instock</th><th>Obs</th><th>Createdat</th>                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>                                                                                    <td>
                                                <a href="{{ path('administration_Product_edit', { 'id': entity.id }) }}">
                                                #{{ entity.id }}
                                                </a>
                                            </td>                                                                                    <td>{{ entity.name }}</td>                                                                                    <td>{{ entity.description }}</td>                                                                                    <td>{{ entity.picture }}</td>                                                                                    <td>{{ entity.price }}</td>                                                                                    <td>{{ entity.inStock }}</td>                                                                                    <td>{{ entity.obs }}</td>                                                                                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>                                            <td><a href="{{ path('administration_Product_edit', { 'id': entity.id }) }}">
<span class="badge badge-primary">
        EDITAR
</span>
</a>
                                            </td>                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    {% if entities %}
                        {{ pagerfanta(paginate, 'twitter_bootstrap3') }}
                    {% endif %}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
