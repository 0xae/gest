<table class="table table-hover table-striped">
    <thead>
        <tr>                                        
            <th>Nome</th>
            <th>Codigo</th>
            <th>Curso</th>
        </tr>
    </thead>
    <tbody>
        {% for d in disciplines %}
            <tr>                                                                                    
                <td>
                    <a href="{{ path('administration_discipline_show', {'id': d.id}) }}">
                        {{ d.name }}
                    </a>
                </td>
                <td>{{ d.code }}</td>
                <td></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
