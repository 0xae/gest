{% if is_granted('ROLE_ADMIN') or is_granted(expression('"ADMINISTRATION_IRECLAMATION_ANALYSIS" in user.getRoles()')) %}

<div class="row">
    <div class="col-md-12">
        <div style="color: gray;margin-bottom: 20px;">
            <span class="fa fa-archive"></span>
            Análise da Reclamação
            <div class="pull-right">
                <a href="#">
                <span class="label label-primary"
                        ng-click="advanceTo('Deseja avançar para decisão a ser tomada?', {{entity.id}}, 3)">
                    Avan&ccedil;ar 
                    <span class="fa fa-chevron-right"></span>
                </span>
                </a>
            </div>
            <hr/>
        </div>
    </div>

    <div class="col-md-6">
        <div class="hidden">
            {{ form_widget(form.step) }}
        </div>

        <div class="form-group">
            <label>Data</label>
            {{ form_widget(form.analysisDate) }}
        </div>

        <div class="form-group">
            <label>Descri&ccedil;&atilde;o</label>
            {{ form_widget(form.analysisDetail, {
                'attr': {
                    'required' : entity.step == 'step#2'
                }
            }) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label>Responsavel</label>
            {{ form_widget(form.analysisResp) }}
        </div>
    </div>
</div>

{% endif %}