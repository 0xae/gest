{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row" ng-controller="IReclController">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{ label }}</h3>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                  
                                <th>ID</th>
                                <th>Name</th>
                                <th>Direção</th>
                                <th>Data</th>
                                <th>Data de resposta (15 dias)</th>
                                <th>Criado por</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>
                                        <a href="{{ path('administration_IReclamation_edit', { 'id': entity.id }) }}">
                                            {{ entity.objCode }}
                                        </a>
                                    </td>                           
                                    <td>{{ entity.name }}</td> 
                                    <td>{{ entity.direction }}</td>
                                    <td>{{ entity.createdAt|date('Y-m-d') }}</td> 
                                    <td>{{ entity.respDate|date('Y-m-d') }}</td> 
                                    <td>{{ entity.createdBy.name }}/{{ entity.createdBy.entity.name }}</td>
                                    <td>
                                        {# <a href="{{ path('administration_Correction_edit', { 'id': 1 }) }}">
                                            <span class="label label-success">Nao conformidade</span>
                                        </a> #}

                                        {# <a href="{{ path('administration_IReclamation_edit', { 'id': entity.id }) }}">
                                            <span class="text-warning fa fa-edit"></span>
                                        </a> #}

                                        <a href="#" ng-click="viewIRecl({{entity.id}}, '{{entity.type}}')">
                                            <span class="text-warning fa fa-eye"></span>
                                        </a>

                                        {% if state == RESPONDIDO %}
                                            <a href="{{ path('administration_IReclamation_receipt', {
                                                    'id': entity.id,
                                                    'type' : 'response'}) }}"
                                                title="Recibo do utente"
                                                target="_blank">
                                                {# <span class="text-warning fa fa-copy"></span> #}
                                                <span class="label label-primary">recibo de resposta</span>
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ include('BackendBundle:IReclamation:modals/viewIRECL.html.twig') }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
