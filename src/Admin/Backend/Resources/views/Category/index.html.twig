{% extends 'BackendBundle:Default:layout.html.twig' %}

{% block content -%}

    <div class="row" ng-controller="Category2Controller">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listagem de Feriados</h3>

                    <div class="box-tools">
                        <a class="btn btn-primary" 
                        href="{{ path('administration_Category_new') }}">
                            <span class="glyphicon glyphicon-plus"></span>
                            Criar Feriado
                        </a>
                    </div>
                </div>
                <!-- /.box-header -->

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>                                        
                                <th>Data</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr id="holy-{{entity.id}}">
                                    <td>
                                        <span class="text-info fa fa-calendar"></span>
                                        {{ entity.name }}
                                    </td>                                                                                    
                                    <td></td>
                                    <td>
                                        <a href="{{ path('administration_Category_edit', { 'id': entity.id }) }}">
                                        <span class="label label-primary">
                                            EDITAR
                                        </span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="" ng-click="delete_holy({{entity.id}})">
                                        <span class="label label-danger">
                                            ELIMINAR
                                        </span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    {% if entities %}
                        {{ pagerfanta(paginate, 'twitter_bootstrap3', {
                                'next_message': 'Proximo',
                                'prev_message': 'Anterior'
                            }) 
                        }}
                    {% endif %}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

{% endblock %}
